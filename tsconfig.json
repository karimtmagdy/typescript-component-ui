{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [
            "./lib/index.d.ts",
            "node_modules/@types"
        ]
    },
    "include": [
        "src",
        "./index.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}